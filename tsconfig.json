{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "baseUrl": "src",
        "paths": {
            "@app": [
                "app"
            ],
            "@app/*": [
                "app/*"
            ],
            "@env": [
                "environments/environment"
            ]
        },
        "sourceMap": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "esnext",
            "dom"
        ]
    }
}
